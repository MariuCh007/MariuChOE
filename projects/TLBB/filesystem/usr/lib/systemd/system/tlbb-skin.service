[Unit]
Description=Copy TLBB skin into user profile directory
DefaultDependencies=no
Before=local-fs.target shutdown.target
Conflicts=shutdown.target

[Service]
Type=oneshot
ExecStart=/bin/sh -c "if [ ! -d /storage/.xbmc/addons/skin.tlbb -o /usr/share/xbmc/addons/skin.tlbb -nt /storage/.xbmc/addons/skin.tlbb ]; then mkdir -p /storage/.xbmc/addons; cp -PR /usr/share/xbmc/addons/skin.tlbb /storage/.xbmc/addons/ &>/dev/null; fi"
RemainAfterExit=yes

[Install]
WantedBy=local-fs.target
